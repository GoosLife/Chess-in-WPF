<Window x:Class="Chess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Title="MainWindow" Height="900" Width="1600">
    <Canvas x:Name="CanvasMain"
            Background="SteelBlue"
            MouseDown="CanvasMain_MouseDown"
            PreviewMouseMove="CanvasMain_PreviewMouseMove"
            PreviewMouseUp="CanvasMain_PreviewMouseUp">
        <Button Content="Button" Canvas.Left="1550" Canvas.Top="350" Click="Button_Click"/>
        <Button Name="FreeMoveToggle" Content="Make Free Moves" Canvas.Left="1550" Canvas.Top="450" Click="FreeMoveToggle_Click"/>
    </Canvas>
</Window>
